@page
@using ClassLibrary.Classes;
@model MediaBazaarWebsite.Pages.ChooseShiftModel
@{
    Layout = "Shared/_LoginLayout";
}

<h1 class="display-3 m-3"style="text-align:center">Sign up for an extra shift!</h1>


<div class="container">
    <div class="row d-flex justify-content-center text-center">
        <div class="col-md-9 d-flex justify-content-center">
            <div class="panel panel-default border m-5 p-4 img-rounded shadow-lg p-3 mb-5 bg-white rounded" id="panel_login">
                <div class="row mt-3" style="overflow-y:scroll">
                    @{
                        if (Model._cancelledShifts.Length > 0)
                        {
                            foreach(CancelledShift shift in Model._cancelledShifts)
                            {
                                <div class="card" style="width: 250px;">
                                    <div class="card-body" style="text-align:center">
                                        <h5 class="card-title">@shift.Shift.GetType() Shift - @shift.Shift.Date.ToShortDateString()</h5>
                                        <form method="post">
                                            <input type="submit" asp-page-handler="OnPost" asp-route-id="@Model.Id" asp-route-shiftId="@shift.Id" value="Sign up" class="ptn btn-primary">
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h1 >No free shifts</h1>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>