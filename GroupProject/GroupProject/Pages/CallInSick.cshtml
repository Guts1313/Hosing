@page "{id}"
@model MediaBazaarWebsite.Pages.CallInSickModel
@{
	ViewData["Title"] = "Call in sick";
}
<div class="container">
	<div class="row d-flex justify-content-center text-center">
		<div class="col-md-8 d-flex justify-content-center">
			<div class="panel panel-default border m-5 p-4 img-rounded shadow-lg p-3 mb-5 bg-white rounded" id="panel_login">
				
				<h3 class="mt-1">Call in sick for @Model._selectedShift.Date.ToShortDateString() in the @Model._selectedShift.GetType()</h3>
				<form method="post" asp-page-handler="Send" class="mt-5 mb-2">
					<label asp-for="_reason">Reason:  </label>
					<input type="text" asp-for="_reason" placeholder="Type your reason..." class="inputs"><br />
					<span asp-validation-for="_reason" style="color: red" class="mb-3"></span><br />

					<a class="btn btn-secondary btn-lg" asp-page="/Index">Close</a>
					<button type="submit" class="btn btn-primary btn-lg">Send</button>

				</form>
				
			</div>
		</div>
	</div>
</div>