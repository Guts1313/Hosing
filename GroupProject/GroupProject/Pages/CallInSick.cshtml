@page 
@model MediaBazaarWebsite.Pages.CallInSickModel
@{
    Layout = "Shared/_LoginLayout";
}

<div class="login">
    <video autoplay loop muted class="bg-video">
        <source src="assets/media/login/background.mp4" type="video/mp4">
    </video>
    <section class="login text-center">
        <div class="container d-flex justify-content-center">
            <div class="login-block">
                <div style="margin-top: 115px;" class="login-content">
                    <!-- Call in Sick Title -->
                    <div class="vacation-title-container">
                        <h2 class="mt-3 section-title-custom">
                            <img src="assets/media/Sick.png" alt="Sick Icon" style="margin-top:-5px; margin-right: 7px" class="section-icon"> Call in Sick:
                        </h2>
                        <p class="date-range-label">Please fill in the details below to call in sick</p>
                    </div>

                    <hr class="section-divider">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <div class="card stock-list-item">
                                <div class="card-body">
                                    <h4 style="margin-bottom: 1.5rem;"class="card-title">@Model._selectedShift.Date.ToShortDateString() in the @Model._selectedShift.GetType()</h4>
                                    <form method="post" asp-page-handler="Send">
                                        <input type="hidden" name="shiftId" value="@Model._selectedShift.Id" />
                                        <div class="form-group">
                                            <label asp-for="_reason" class="form-label">Reason:</label>
                                            <input type="text" asp-for="_reason" placeholder="Type your reason..." class="form-control">
                                            <span asp-validation-for="_reason" style="color: red"></span>
                                        </div>
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-primary">Send</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .stock-list-item .card-body{
        padding: 30px 30px 30px 30px;
    }
    .stock-list-item {
        width: 390px;
    }
</style>