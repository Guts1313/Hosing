@page
@model MediaBazaarWebsite.Pages.CancelledShiftsModel
@{
	Layout = "Shared/_LoginLayout";
}

<!--=====================================-->
<!--=        login Area Start          =-->
<!--=====================================-->
<div class="login">
	<video autoplay loop muted class="bg-video">
		<source src="assets/media/login/background.mp4" type="video/mp4">
	</video>
	<section class="login text-center">
		<div class="container">
			<div class="login-block">
				<div style="margin-top: 30px;" class="login-content">
					<h2 class="mt-3 section-title">
						<img src="assets/media/Vacations.png" alt="Vacation Icon" class="section-icon"> Your Vacations:
					</h2>
					<hr class="section-divider">
					<div class="calendar">
						<div class="calendar-header">
							<!-- COLUMNS -->
							<div class="calendar-header-item-custom">Start Date</div>
							<div class="calendar-header-item-custom">End Date</div>
							<div class="calendar-header-item-custom">Reason</div>
							<div class="calendar-header-item-custom">Status</div>
						</div>

						<div class="calendar-content">
							<!-- DUMMY ROWS -->
							@foreach(var vacation in Model.vacations)
							{
								<div class="calendar-row">


									<div class="calendar-day-custom shift-type">@vacation.StartDate</div>
									<div class="calendar-day-custom">@vacation.EndDate</div>
									<div class="calendar-day-custom">@vacation.Reason</div>
									@if (vacation.Approved)
									{
										<div class="calendar-day-custom viewed">Approved</div>
									}
									else if(vacation.Pending)
									{
										<div class="calendar-day-custom sent">Pending</div>
									}
									else
									{
										<div class="calendar-day-custom rejected">Rejected</div>
									}
								</div>
							}
						</div>
					</div>

					<div class="shift-navigation-buttons">
						<!-- Dropdown for Date -->
						<div class="dropdown" style="position: relative;">
							<button class="btn" type="button" id="dropdownDate" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="position: relative; padding-right: 30px;">
								Start Date <span style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">&blacktriangledown;</span>
							</button>
							<div class="dropdown-menu" aria-labelledby="dropdownDate" style="margin-top: 5px; background: rgba(255, 255, 255, 0.1); color: white;">
								<form method="post">
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="StartAscending" style="font-size: 0.8rem; color: white;">Start Date Ascending</button>
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="StartDescending" style="font-size: 0.8rem; color: white;">Start Date Descending</button>
								</form>
							</div>
						</div>

						<!-- Dropdown for Status -->
						<div class="dropdown" style="position: relative;">
							<button class="btn" type="button" id="dropdownStatus" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="position: relative; padding-right: 30px;">
								End Date <span style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">&blacktriangledown;</span>
							</button>
							<div class="dropdown-menu" aria-labelledby="dropdownStatus" style="margin-top: 5px; background: rgba(255, 255, 255, 0.1); color: white;">
								<form method="post">
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="EndAscending" style="font-size: 0.8rem; color: white;">End Date Ascending</button>
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="StartDescending" style="font-size: 0.8rem; color: white;">End Date Descending</button>
								</form>
							</div>
						</div>

						<div class="dropdown" style="position: relative;">
							<button class="btn" type="button" id="dropdownStatus" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="position: relative; padding-right: 30px;">
								Status <span style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">&blacktriangledown;</span>
							</button>
							<div class="dropdown-menu" aria-labelledby="dropdownStatus" style="margin-top: 5px; background: rgba(255, 255, 255, 0.1); color: white;">
								<form method="post">
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="Approved" style="font-size: 0.8rem; color: white;">Approved</button>
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="Pending" style="font-size: 0.8rem; color: white;">Pending</button>
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="Rejected" style="font-size: 0.8rem; color: white;">Rejected</button>
									<button class="dropdown-item" asp-page-handler="Filter" asp-route-filter="AllVacations" style="font-size: 0.8rem; color: white;">All</button>
								</form>
							</div>
						</div>
						<!-- Button for Clear Filters -->
						<form method="post">
							<button class="btn" asp-page-handler="Filter" asp-route-filter="ClearVacations" style="border: 1px solid var(--color-grey-light);">Clear Filters</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>