@page
@model GroupProject.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
	Layout = "_Layout2";
}

<body id="grad">
	<div class="container vh-100 d-flex justify-content-center align-items-center">
		<div class="row d-flex justify-content-center align-items-center text-center">
			<div class="d-flex justify-content-center">
				<div class="border img-rounded shadow-lg p-3 bg-white rounded" id="panel_login">
					<h1>@ViewData["Title"]</h1>
					
					<form method="post">
						<div class="form-group mt-3" >
							<p style="color: red">@ViewData["Message"]</p><br />
							<label asp-for="employee.Username">Username:  </label>
							<input type="text" asp-for="employee.Username" placeholder="Type your username..." class="inputs" value="Dan"><br />
							<span asp-validation-for="employee.Username" style="color: red"></span><br />

							<label asp-for="employee.Password" class="mt-3">Password:  </label>
							<input type="password" asp-for="employee.Password" placeholder="Type your password..." class=" inputs" value="1234"><br />
							<span asp-validation-for="employee.Password" style="color: red"></span><br><br>
						</div>
						<button type="submit" class="btn btn-dark btn-lg">Login</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>