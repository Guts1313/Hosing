<style>
    footer {
        display: none;
    }
</style>

<div class="container">
    <video autoplay loop muted class="bg-video">
        <source src="assets/media/login/background.mp4" type="video/mp4">
    </video>
    <div class="login-block">
        <div style="margin-top:-45px"class="login-content">
            <h2 class="mt-3 section-title">
                <img src="assets/media/login/Stock.png" alt="Stock Icon" class="section-icon"> Stock Items:
            </h2>
            <hr class="section-divider">
            <div class="row">
                @foreach (var stocks in Model.stocks)
                {
                    <div class="col-auto">
                        <div class="card stock-list-item">
                            <div class="card-body">
                                <h4 class="card-title">Item name: @stocks.Name</h4>
                                <p class="card-text">Price: @stocks.Price</p>
                                <p class="card-text">Available Amount: @stocks.Amount</p>
                                <p class="card-text">Description: @stocks.Description</p> <!-- Corrected to show Description -->

                                <form method="post">
                                    <input type="hidden" name="id" value="@stocks.Id"/>
                                    <label asp-for="@stocks.Amount">Amount</label>
                                    <input asp-for="@stocks.Amount" name="amount"/>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>